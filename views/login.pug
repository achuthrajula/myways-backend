extends layout

block body-pack
	.container
		.row
			.col-md-3
			.col-md-6.mt-5

				h2.text-center Attendance Management Login

				form.mt-5(action="/auth/login" method="POST")
					.form-group
						label(for="id") ID
						input.form-control(type="text" name="id")
					.form-group
						label(for="password") Password
						input.form-control(type="password" name="password")
					.form-group
						label(for="role") Role
						select.form-control(name="role")
							option(value="student") Student
							option(value="teacher") Teacher
					button.btn.btn-primary(type="submit", style='margin-right: 25px') Login
					a.btn.btn-danger(href="/auth/signup") Register